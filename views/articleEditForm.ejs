<!DOCTYPE html>
<html lang="en">
   
   <%- include head %>

<body>

   <div class="container edit-form-header">
      <div class="col-12 mx-auto text-center">
         <div class="header-title">
            <h1 class="wv-heading--title">
               Editar articulo
            </h1>
         </div>
      </div>
  
         <div class="container edit-form">
            <div class="col-12 mx-auto">

               <div class="myform form">
                
                  <form action="/article/edit/<%=articles.id%>?_method=put" name="edit-article" method="POST">
                     <input type="hidden" name="_method" value="PUT" >

                     <div class="row">
                        <div class="col">
                           <div class="form-group">
                              <label for="title">Titulo</label>
                              <input type="text" name="title"  class="form-control my-input" value= "<%= articles.title%>" id="title" required="required" minlength="10" maxlength="55">
                          
                           </div>
                         
                           <div class="form-group">
                              <label for="excerpt">Copete</label>
                              <input type="text" name="excerpt"  class="form-control my-input" value= "<%= articles.excerpt%>" id="excerpt" required="required" minlength="10" maxlength="160">
                           </div>
                         
                           <div class="form-group">
                            <label for="content">Contenido</label>
                            <input type="text" name="content"  class="form-control my-input" value= "<%= articles.content%>" id="content" required="required" minlength="50" maxlength="3000">
                          </div>

                           <div class= "dropdown-divider"> </div>
             

                           
                        <div class="form-group">
                           <label for="photo">Imagen</label>
                                 <div class="col-6 text-left"><img src="<%= articles.photo%>" width="350" height="250" class="img-edit-content" alt="#"></div>
                    
                    
                        </div>

                        <div class="form-group">

                            <div class="col-6 text-right"><input type="url" name="img"  class="form-control my-input" id="img" value="<%= articles.photo%>" required="required"></div>

                        </div>

                          <div class= "dropdown-divider"> </div>
                          
                
                       <div class="text-center">
                                    <button type="submit" class="myButton">Enviar</button>
                       </div>
                  </form>
                  
               </div>
            </div>
         </div>       


   </div>

</body>
</html>
